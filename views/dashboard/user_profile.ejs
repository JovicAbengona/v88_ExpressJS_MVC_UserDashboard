<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="description" content="Village88 Training | Web Fundamentals | CSS | Bootstrap">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
        <style>
            /* .text-decoration-none class of Bootstrap isn't working so I had to make my own */
            tbody td .text-decoration-none{
                text-decoration: none;
            }
        </style>
        <title>UserDashboard | Dashboard</title>
    </head>
    <body class="d-flex flex-column h-100">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <a class="navbar-brand text-success" href="<% if(user_level == 9){ %> /dashboard/admin <% } else{ %> /dashboard <% } %>">UserDashboard</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="<% if(user_level == 9){ %> /dashboard/admin <% } else{ %> /dashboard <% } %>">Dashboard <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="/dashboard/users/edit"><%= first_name %></a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="btn btn-sm btn-outline-danger" href="/logoff">Log off</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="container">
            <div class="mt-5">
                <h5 class="d-inline">Edit Profile</h5>
                <a class="btn btn-sm btn-success float-right" href="<% if(user_level == 9){ %> /dashboard/admin <% } else{ %> /dashboard <% } %>">Return To Dashboard</a>
            </div>
            <div class="row mt-3">
                <div class="col-lg-6">
                    <div class="card">
                        <div class="card-header">
                            <ul class="nav nav-tabs card-header-tabs">
                                <li class="nav-item">
                                    <span class="nav-link active" aria-current="true">Edit Information</span>
                                </li>
                            </ul>
                        </div>
                        <div class="card-body">
                            <form id="edit_details_form" action="/process_update_user/<%= user.id %>" method="POST">
                                <div class="mb-3">
                                    <label for="email" class="form-label">Email Address</label>
                                    <input type="text" name="email" class="form-control" id="email" value="<%= user.email %>">
                                </div>
                                <div class="mb-3">
                                    <label for="first_name" class="form-label">First Name</label>
                                    <input type="text" name="first_name" class="form-control" id="first_name" value="<%= user.first_name %>">
                                </div>
                                <div class="mb-3">
                                    <label for="last_name" class="form-label">Last Name</label>
                                    <input type="text" name="last_name" class="form-control" id="last_name" value="<%= user.last_name %>">
                                </div>
                                <button type="submit" class="btn btn-success">Save</button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="card">
                        <div class="card-header">
                            <ul class="nav nav-tabs card-header-tabs">
                                <li class="nav-item">
                                    <span class="nav-link active" aria-current="true">Change Password</span>
                                </li>
                            </ul>
                        </div>
                        <div class="card-body">
                            <form id="change_pass_form" action="/process_change_password/<%= user.id %>" method="POST">
                                <input type="hidden" name="<?=$this->security->get_csrf_token_name();?>" value="<?=$this->security->get_csrf_hash();?>" />
                                <div class="mb-3">
                                    <label for="password" class="form-label">Password</label>
                                    <input type="password" name="password" class="form-control" id="password">
                                </div>
                                <div class="mb-3">
                                    <label for="confirm_password" class="form-label">Confirm Password</label>
                                    <input type="password" name="confirm_password" class="form-control" id="confirm_password">
                                </div>
                                <button type="submit" class="btn btn-success">Change Password</button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12 mt-3 mb-5">
                    <div class="card">
                        <div class="card-header">
                            <ul class="nav nav-tabs card-header-tabs">
                                <li class="nav-item">
                                    <span class="nav-link active" aria-current="true">Edit Description</span>
                                </li>
                            </ul>
                        </div>
                        <div class="card-body">
                            <form id="change_desc_form" action="/process_edit_description/<%= user.id %>" method="POST">
                                <div class="mb-3">
                                    <textarea name="description" id="description" class="form-control no-resize" rows="5"><%= user.description %></textarea>
                                </div>
                                <button type="submit" class="btn btn-success">Save</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <footer class="container footer mt-auto text-success text-center mt-5">
            <p>Â© <%= new Date().getFullYear();%> Village88 | All Rights Reserved</p>
        </footer>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
        <script>
            $(document).ready(() => {
                $("input").keydown(function(){
                    $(this).next().remove();
                });

                $("#edit_details_form").submit(function(){
                    $("p").remove();
                    $.post($(this).attr("action"), $(this).serialize(), function(res){
                        if(res.type == "error"){
                            res.msg.forEach(error => {
                                $(`#${error.element}`).after(`<p class="font-italic text-danger small">${error.message}</p>`);
                            });
                        }
                        else{
                            $("#edit_details_form button").after(`<p class="font-italic text-success mt-3">${res.message}</p>`);
                        }
                    });
                    return false;
                });

                $("#change_pass_form").submit(function(){
                    $("p").remove();
                    $.post($(this).attr("action"), $(this).serialize(), function(res){
                        if(res.type == "error"){
                            res.msg.forEach(error => {
                                $(`#${error.element}`).after(`<p class="font-italic text-danger small">${error.message}</p>`);
                            });
                        }
                        else{
                            $("#change_pass_form button").after(`<p class="font-italic text-success mt-3">${res.message}</p>`);
                            $("#change_pass_form")[0].reset();
                        }
                    });
                    return false;
                });

                $("#change_desc_form").submit(function(){
                    $("p").remove();
                    $.post($(this).attr("action"), $(this).serialize(), function(res){
                        if(res.type == "error"){
                            res.msg.forEach(error => {
                                $(`#${error.element}`).after(`<p class="font-italic text-danger small">${error.message}</p>`);
                            });
                        }
                        else{
                            $("#change_desc_form button").after(`<p class="font-italic text-success mt-3">${res.message}</p>`);
                        }
                    });
                    return false;
                });
            });
        </script>
    </body>
</html>